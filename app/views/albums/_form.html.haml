= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Name
    = f.text_field :Name
  .field
    = f.label :Release
    = f.date_select :Release
  .field
    = f.label :Artist
    = f.text_field :Artist
  .field
    = f.label :Notes
    = f.text_field :Notes
  .field
    = f.label :Fave
    = f.check_box :Fave
  .actions
    = f.submit 'Save'
