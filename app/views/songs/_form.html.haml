= form_for @song do |f|
  - if @song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Title
    = f.text_field :Title
  .field
    = f.label :Album
    = f.text_field :Album
  .field
    = f.label :Notes
    = f.text_field :Notes
  .field
    = f.label :Fave
    = f.check_box :Fave
  .actions
    = f.submit 'Save'
